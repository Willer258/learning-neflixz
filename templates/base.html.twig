<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block body %}

			<h1>Films ({{ movies|length }})</h1>

			<a href="/movies/create">
				<button>
					Ajouter un nouveau film
				</button>

			</a>

			{% for movie in movies %}

				<ul>
					<div>

						<img src="{{movie.coverPath}}" width="500" height="500" alt="">
					</div>
					<li>

						<h3>{{movie.name}}</h3>
					</li>
					<li>
						{{movie.description}}
					</li>
					<li>

						{{movie.timed}}
						min
					</li>

					<li>
						<a href="/movies/{{movie.id}}">Voir plus</a>
					</li>
				</ul>
			{% endfor %}


		{% endblock %}
	</body>
</html>
